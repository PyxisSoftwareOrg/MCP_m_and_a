# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=ma-research-bucket

# AWS Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_PRIMARY_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_FALLBACK_MODEL=amazon.nova-pro-v1:0

# API Keys
APIFY_API_TOKEN=your_apify_api_token_here

# MCP Configuration
MCP_SERVER_NAME=ma-research-assistant
MCP_SERVER_VERSION=1.0.0

# Feature Flags
ENABLE_CACHING=true
MAX_PARALLEL_ANALYSES=5

# Lead Qualification Thresholds
QUALIFICATION_MINIMUM_SCORE=7.0
TIER_VIP_THRESHOLD=9.0
TIER_HIGH_THRESHOLD=7.0
TIER_MEDIUM_THRESHOLD=5.0

# Rate Limiting
BEDROCK_REQUESTS_PER_MINUTE=100
BEDROCK_TOKENS_PER_MINUTE=200000
BEDROCK_MAX_CONCURRENT=10
APIFY_REQUESTS_PER_HOUR=100
WEB_SCRAPING_REQUESTS_PER_SECOND=1
WEB_SCRAPING_CONCURRENT_DOMAINS=5

# Resource Limits
MAX_MEMORY_PER_ANALYSIS=512MB
MAX_WEBSITE_CONTENT_SIZE=10MB
MAX_PAGES_PER_COMPANY=10
MAX_ANALYSIS_TIME=300
MAX_RETRY_ATTEMPTS=3

# Cache Configuration
CACHE_WEBSITE_CONTENT_HOURS=24
CACHE_LINKEDIN_DATA_DAYS=7
CACHE_PAID_API_DAYS=30

# Security
ENCRYPT_SENSITIVE_DATA=true
AUDIT_ALL_OPERATIONS=true
REQUIRE_MFA_FOR_EXPORTS=true